<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/photo_taken"
        android:contentDescription="image"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textSize="25sp"
                android:id="@+id/tvFirstName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:textSize="25sp"
                android:id="@+id/tvLastName"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </LinearLayout>


    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/profileImage"-->
        <!--android:layout_gravity="center_horizontal|bottom"-->
        <!--android:contentDescription="image" />-->

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Your Profile"-->
        <!--android:id="@+id/tvProfile"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignRight="@+id/linearLayout"-->
        <!--android:layout_alignEnd="@+id/linearLayout" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btn_update_image"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/updateImage"
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:onClick="updateImage"/>

        <Button
            android:id="@+id/btn_do_quiz"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:text="@string/doQuiz"
            android:textSize="20sp"
            android:onClick="moveToQuiz"/>

        <Button
            android:id="@+id/btn_find_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="@string/findQuiz"
            android:textSize="20sp"
            android:onClick="moveToFindQuiz"/>

    </LinearLayout>


</RelativeLayout>

